{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["off", 2],
    "linebreak-style": ["off", "unix"],
    "quotes": ["error", "single"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
